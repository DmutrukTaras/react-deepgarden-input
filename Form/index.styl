._Form

	&__HiddenButton
		display: none

	&__Field
		display: block

		&--Inline
			display: flex
			align-items: center

			._Form

				&__Label
					display: inline-block
					vertical-align: middle
					margin-right: 10px

	&__Input
		flex-shrink: 0

		&--withoutLegend
			width: 100%

	&__View
		color: $palette.strict.color

	&__Wrapper
		width: 100%
		display: flex
		align-items: center

	&__Legend
		margin-left: 15px
