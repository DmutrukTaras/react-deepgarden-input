@require 'deepgarden'
@require '../input.styl'

._ImageUploadInput
	cursor: pointer

	&__Input
		display: none

	&__Image
		position: relative
		display: flex
		align-items: center

		img
			display: block
			margin: auto
			max-width: 100%
			max-height: 100%

	&__NoImage
		margin: auto

	&:hover &__PlaceholderText
		display: flex

	&__PlaceholderText
		display: none
		align-items: center
		justify-content: center
		position: absolute
		right: 0
		bottom: 0
		left: 0
		background: rgba(0, 0, 0, 0.5)
		color: #FFF
		padding: 10px
